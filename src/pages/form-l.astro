---
import Layout from '../layouts/Layout.astro'
---

<script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.js" defer></script>

<Layout title="Form">
  <main class="flex justify-center">
    <form action="">
      <div class="flex flex-col h-[450px] w-[300px] border border-white border-opacity-20 shadow-[4.0px_8.0px_8.0px_rgba(0,0,0,0.38)] bg-white bg-opacity-10 backdrop-blur-md">
          <p class="grid place-content-center w-full h-[15vh] font-bold text-gray-50 text-4xl">Hello :)</p>
          <div class="flex justify-center items-center flex-col ml-3.5 border-t-[3px] border-b-[3px] w-11/12 pt-[5px] pb-[5px] " >
              <input class="text-sm w-[90%] h-9 mt-[5px] mb-[5px] p-[5px] rounded-sm bg-gray-50 border border-gray-200 focus:outline-0 focus:dark:border-gray-600 text-gray-800 placeholder-gray-500" type="text" placeholder="Username">
              <div class="py-2 w-[100%] mt-[2px] mb-[5px]" x-data="{ show: true }">
                  <div class="flex justify-center relative">
                    <input placeholder="Password" :type="show ? 'password' : 'text'" class="text-sm w-[90%] h-9 p-[5px] pr-[32px] rounded-sm bg-gray-50 border border-gray-200 focus:outline-0 focus:dark:border-gray-600 text-gray-800 placeholder-gray-500">
                    <div class="absolute inset-y-0 top-[-2px] right-2 pr-3 flex items-center text-sm leading-5">
                      <svg   
                      width="24"  
                      height="24"  
                      viewBox="0 0 24 24"  
                      fill="none"  
                      stroke="currentColor"  
                      stroke-width="2"  
                      stroke-linecap="round"  
                      stroke-linejoin="round"  
                      class="h-6 text-gray-700"
                      @click="show = !show"
                      :class="{'hidden': !show, 'block':show }">
                      <path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" /><path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6" />
                      </svg>
      
                      <svg  
                      width="24"  
                      height="24"  
                      viewBox="0 0 24 24"  
                      fill="none"  
                      stroke="currentColor"  
                      stroke-width="2"  
                      stroke-linecap="round"  
                      stroke-linejoin="round"  
                      class="h-6 text-gray-700"
                      @click="show = !show"
                      :class="{'block': !show, 'hidden':show }">
                      <path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10.585 10.587a2 2 0 0 0 2.829 2.828" /><path d="M16.681 16.673a8.717 8.717 0 0 1 -4.681 1.327c-3.6 0 -6.6 -2 -9 -6c1.272 -2.12 2.712 -3.678 4.32 -4.674m2.86 -1.146a9.055 9.055 0 0 1 1.82 -.18c3.6 0 6.6 2 9 6c-.666 1.11 -1.379 2.067 -2.138 2.87" /><path d="M3 3l18 18" /></svg>
                    </div>
                  </div>
                </div>
                <div class="flex space-x-12"><label class="block text-gray-500"><input type="checkbox"
                  class="leading-loose"> <span class="text-sm text-gray-50 leading-snug"> Remember
                  Me </span></label> 
                  <label class="block text-gray-500"><a
                  href="#"
                  class="cursor-pointer tracking-tighter text-sm text-gray-50"><span>Forgot
                    Password?</span>
                  </a>
                </label>
                </div>
          </div>
            <div class="flex items-center justify-center mt-7">
              <button class="flex items-center bg-white dark:bg-gray-900 border border-gray-300 rounded-lg shadow-md px-6 py-2 text-sm font-medium text-gray-800 dark:text-white hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
                <svg class="h-6 w-6 mr-2" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="800px" height="800px" viewBox="-0.5 0 48 48" version="1.1"><defs> </defs> <g id="Icons" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd"> <g id="Color-" transform="translate(-401.000000, -860.000000)"> <g id="Google" transform="translate(401.000000, 860.000000)"> <path d="M9.82727273,24 C9.82727273,22.4757333 10.0804318,21.0144 10.5322727,19.6437333 L2.62345455,13.6042667 C1.08206818,16.7338667 0.213636364,20.2602667 0.213636364,24 C0.213636364,27.7365333 1.081,31.2608 2.62025,34.3882667 L10.5247955,28.3370667 C10.0772273,26.9728 9.82727273,25.5168 9.82727273,24" id="Fill-1" fill="#FBBC05"> </path> <path d="M23.7136364,10.1333333 C27.025,10.1333333 30.0159091,11.3066667 32.3659091,13.2266667 L39.2022727,6.4 C35.0363636,2.77333333 29.6954545,0.533333333 23.7136364,0.533333333 C14.4268636,0.533333333 6.44540909,5.84426667 2.62345455,13.6042667 L10.5322727,19.6437333 C12.3545909,14.112 17.5491591,10.1333333 23.7136364,10.1333333" id="Fill-2" fill="#EB4335"> </path> <path d="M23.7136364,37.8666667 C17.5491591,37.8666667 12.3545909,33.888 10.5322727,28.3562667 L2.62345455,34.3946667 C6.44540909,42.1557333 14.4268636,47.4666667 23.7136364,47.4666667 C29.4455,47.4666667 34.9177955,45.4314667 39.0249545,41.6181333 L31.5177727,35.8144 C29.3995682,37.1488 26.7323182,37.8666667 23.7136364,37.8666667" id="Fill-3" fill="#34A853"> </path> <path d="M46.1454545,24 C46.1454545,22.6133333 45.9318182,21.12 45.6113636,19.7333333 L23.7136364,19.7333333 L23.7136364,28.8 L36.3181818,28.8 C35.6879545,31.8912 33.9724545,34.2677333 31.5177727,35.8144 L39.0249545,41.6181333 C43.3393409,37.6138667 46.1454545,31.6490667 46.1454545,24" id="Fill-4" fill="#4285F4"> </path> </g> </g> </g> </svg>
              <span>Continue with Google</span>
            </button>
            </div>
          <button class="text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-r hover:dark:from-blue-600 hover:dark:via-blue-700 hover:dark:to-blue-800 focus:ring-2 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-xl text-lg py-2 text-center mt-7 m-2">
            Login
            </button>
            <span class=" w-6/7 p-2 m-2 font-sans text-sm text-gray-50">
            Do you already have an account?
            <a class="text-white font-bold" href="/form-r">sing up.</a>
            </span>
          </div>
      </div>
    </form>
  </main>
</Layout>